@model List<MoviesLab.Models.Person>

@{
    ViewBag.Title = "Избранные персоны";
}

<h1>@ViewBag.Title</h1>

<p class="text-success">@ViewBag.StatusMessage</p>

<hr />

<div class="row">
    @if (Model.Count < 1)
    {
        <div class="col-md-12">У Вас нет персон в избранном.</div>
    }
    else
    {
        <div class="col-md-12">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Фамилия Имя Отчество</th>
                        <th>Дата рождения</th>
                        <th>Место рождения</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var p in Model)
                    {
                        <tr>
                            <td><a href="/Person?PersonId=@p.PersonId">@p.Fullname</a></td>
                            <td>@p.Birthday.Value.ToString("dd.MM.yyyy") (@p.Age)</td>
                            @if (p.Country != null)
                            {
                                <td>@p.Country.Name</td>
                            }
                            else
                            {
                                <td>-</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>


@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")