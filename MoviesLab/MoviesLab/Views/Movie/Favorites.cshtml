@model List<MoviesLab.Models.Movie>

@{
    ViewBag.Title = "Избранные фильмы";
}

<h1>@ViewBag.Title</h1>

<p class="text-success">@ViewBag.StatusMessage</p>

<hr />

<div class="row">
    @if (Model.Count < 1)
    {
        <div class="col-md-12">У Вас нет фильмов в избранном.</div>
    }
    else
    {
        <div class="col-md-12">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Жанры</th>
                        <th>Дата выхода</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var m in Model)
                    {
                        <tr>
                            <td><a href="/Movie?MovieId=@m.MovieId">@m.Title</a></td>
                            <td>@m.Genres</td>
                            <td>@m.Date.Value.ToString("dd.MM.yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

</div>


@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")